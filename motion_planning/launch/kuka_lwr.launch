<launch>

  <param name="robot_description" 
	 command="$(find xacro)/xacro.py '$(find lwr_defs)/robots/kuka_lwr_arm.urdf.xml'" />

  <node name="robot_sim" pkg="robot_sim" type="robot_sim_bringup" respawn="false" output="screen">
    <param name="cycle_move" value="false"/>
  </node>

  <node pkg="robot_state_publisher" type="robot_state_publisher" 
  	name="robot_state_publisher" output="screen" />

  <include file="$(find lwr_robot_moveit_config)/launch/planning_context.launch">
    <arg name="load_robot_description" value="true"/>
  </include>

  <include file="$(find lwr_robot_moveit_config)/launch/move_group.launch">
    <arg name="allow_trajectory_execution" value="false"/>
  </include>

  <node name="$(anon rviz)" pkg="rviz" type="rviz" respawn="false"
	args="-d $(find motion_planning)/config/mp.rviz" output="screen"/>

  <node name="marker_control" pkg="motion_planning" type="marker_control.py" respawn="false" output="screen"/>
  
</launch>
